<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_margin"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/space12x"
        android:layout_height="@dimen/space12x"
        android:padding="@dimen/space2x"
        app:layout_constraintBottom_toBottomOf="@id/published_date"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:srcCompat="@drawable/ic_netology" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/common_margin"
        android:singleLine="true"
        android:text="@string/netology_title"
        android:theme="@style/text_14sp"
        app:layout_constraintBottom_toTopOf="@id/published_date"
        app:layout_constraintEnd_toStartOf="@id/more_button"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/published_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/common_margin"
        android:theme="@style/text_14sp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text="@string/sample_date" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/more_button"
        android:layout_width="@dimen/space4x"
        android:layout_height="@dimen/space4x"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="avatar, title, published_date" />

    <TextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:lineSpacingExtra="@dimen/space2x"
        android:linksClickable="true"
        android:paddingTop="@dimen/common_margin"
        android:paddingBottom="@dimen/common_margin"
        android:text="@string/sample_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_barrier" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/footer_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="post_text" />

    <ImageView
        android:id="@+id/ic_like"
        android:layout_width="@dimen/space8x"
        android:layout_height="@dimen/space8x"
        android:padding="@dimen/space1x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/footer_barrier"
        app:srcCompat="@drawable/ic_favorite_border" />

    <TextView
        android:id="@+id/cnt_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_likes"
        android:paddingStart="@dimen/space1x"
        android:paddingEnd="@dimen/space8x"
        app:layout_constraintBottom_toBottomOf="@id/ic_like"
        app:layout_constraintStart_toEndOf="@id/ic_like"
        app:layout_constraintTop_toTopOf="@id/ic_like" />

    <ImageView
        android:id="@+id/ic_share"
        android:layout_width="@dimen/space8x"
        android:layout_height="@dimen/space8x"
        android:padding="@dimen/space1x"
        app:layout_constraintStart_toEndOf="@id/cnt_likes"
        app:layout_constraintTop_toBottomOf="@id/footer_barrier"
        app:srcCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/cnt_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_likes"
        android:paddingStart="@dimen/space1x"
        android:paddingEnd="@dimen/space8x"
        app:layout_constraintBottom_toBottomOf="@id/ic_share"
        app:layout_constraintStart_toEndOf="@id/ic_share"
        app:layout_constraintTop_toTopOf="@id/ic_share" />


    <TextView
        android:id="@+id/cnt_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_likes"
        android:paddingStart="@dimen/space1x"
        app:layout_constraintBottom_toBottomOf="@id/ic_visibility"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_visibility" />

    <ImageView
        android:id="@+id/ic_visibility"
        android:layout_width="@dimen/space8x"
        android:layout_height="@dimen/space8x"
        android:padding="@dimen/space1x"
        app:layout_constraintEnd_toStartOf="@id/cnt_visibility"
        app:layout_constraintTop_toBottomOf="@id/footer_barrier"
        app:srcCompat="@drawable/ic_visibility" />

</androidx.constraintlayout.widget.ConstraintLayout>